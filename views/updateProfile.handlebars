<h1>update</h1>
<form action="/api/users/updateProfile/{{user_data.id}}" method="POST" >
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" value="{{user_data.name}}"/>
    </div>
    <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="text" name="phone" class="form-control" value="{{user_data.phone}}"/>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control" value="{{user_data.email}}"/>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="door" class="form-control" value="{{user_data.address.door_no}}" placeholder="Door Number"/>
        <br>
        <input type="text" name="street" class="form-control" value="{{user_data.address.street}}" placeholder="Enter Street"/>
        <br>
        <input type="text" name="city" class="form-control" value="{{user_data.address.city}}" placeholder="Enter City"/>
        <br>
        <input type="text" name="state" class="form-control" value="{{user_data.address.state}}" placeholder="Enter State"/>
        <br>
        <input type="text" name="pin" class="form-control" value="{{user_data.address.pin}}" placeholder="PIN Number"/>
    </div>
    <input type="submit" value="Update"/>
</form>